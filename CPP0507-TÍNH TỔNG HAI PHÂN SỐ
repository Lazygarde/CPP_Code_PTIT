#include <bits/stdc++.h>
using namespace std;
long long ucln(long long a,long long b){
    while(b!=0){
        long long x=a%b;
        a=b;
        b=x;
    }
    return a;
}
long long bcnn(long long a,long long b){
	return a*b/ucln(a,b);
}
int main(){
	long long a,b,c,d;
	cin>>a>>b>>c>>d;
	long long k=ucln(a,b);
	a/=k;
	b/=k;
	k=ucln(c,d);
	c/=k;
	d/=k;
	k=bcnn(b,d);
	long long e=a*k/b+c*k/d;
	long long h=ucln(k,e);
	cout<<e/h<<"/"<<k/h;
}
