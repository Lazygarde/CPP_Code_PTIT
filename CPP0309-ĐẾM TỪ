#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main(){
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int t;
	cin>>t;
	cin.ignore();
	while(t--){
		string a;
		getline(cin,a);
		int n=a.size(),s=1;
		for(int i=0;i<n;i++){
			if((a[i-1]==' '||a[i-1]=='\t')&&a[i]>='a'&&a[i]<='z') s++;
		}
		cout<<s<<endl;
	}
}
