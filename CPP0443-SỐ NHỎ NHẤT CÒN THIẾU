#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main(){
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int t;
	cin>>t;
	while(t--){
		int n,ok=0;
		cin>>n;
		int a[n];a[0]=0;
		for(int i=1;i<n;i++) cin>>a[i];
		sort(a+1,a+n);
		for(int i=1;i<n;i++){
			if(a[i]-a[i-1]>1){
				cout<<a[i-1]+1;
				ok=1;
			}
		}
		if(ok==0) cout<<a[n-1]+1;
		cout<<endl;
	}
}
