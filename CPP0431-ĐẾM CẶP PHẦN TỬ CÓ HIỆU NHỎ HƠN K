#include <bits/stdc++.h>
using namespace std;
int main(){
	int t;
	cin>>t;
	while(t--){
		int n,k,s=0;
		cin>>n>>k;
		int a[n];
		for(int i=0;i<n;i++) cin>>a[i];
		sort(a,a+n);
		for(int i=0;i<n-1;i++){
			int l=i+1,r=n-1;
			while(l<=r){
				int pos=(l+r)/2;
				if(a[pos]-a[i]>k) r=pos-1;
				else if(a[pos]-a[i]<k){
					s+=pos-l+1;
					l=pos+1;
				}
				else{
					int x=pos;
					while(a[x]==a[pos]) x--;
					s+=x-l+1;
					break;
				}
			}
		}
		cout<<s<<endl;
	}
}
